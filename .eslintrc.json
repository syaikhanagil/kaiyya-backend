{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "max-len": ["warn", 400],
        "indent": ["error", 4],
        "comma-dangle": ["error", "never"],
        "object-curly-newline": "off",
        "arrow-body-style": "off",
        "consistent-return": "off"
    }
}
